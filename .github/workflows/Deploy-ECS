name: Deploy no ECS com Docker Hub

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout do repositório
        uses: actions/checkout@v4

      - name: Configurar credenciais AWS
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-1

      - name: Atualizar task definition com nova imagem
        run: |
          sed "s|projetomesa07/flask-library-app:latest|projetomesa07/flask-library-app:latest|g" task-definition.json > new-task-def.json

      - name: Registrar nova task definition
        id: register-task
        run: |
          TASK_DEF_ARN=$(aws ecs register-task-definition --cli-input-json file://new-task-def.json --query 'taskDefinition.taskDefinitionArn' --output text)
          echo "task_definition_arn=$TASK_DEF_ARN" >> $GITHUB_OUTPUT

      - name: Atualizar serviço ECS
        run: |
          aws ecs update-service \
            --cluster mesa-cluster \
            --service mesa-service \
            --task-definition ${{ steps.register-task.outputs.task_definition_arn }}
